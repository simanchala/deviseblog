<h1>Articles</h1>

<div id="articles">
<% @articles.each do |article| %>
  <h2><%= link_to article.name, article %></h2>
  <% if article.published_on.present? %>
    <div class="info">Published on <%= article.published_on.strftime('%b %d %Y') %></div>
  <% end %>
  <div class="content"><%= article.content %></div>
  <div class="sss">(Written by <%= article.author_name %>)</div>
<% end %>
</div>

<p>
  <%= link_to "New Article", new_article_path %>
</p>
